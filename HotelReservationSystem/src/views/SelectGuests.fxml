<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SelectGuests">
   <children>
      <ImageView fitHeight="300.0" fitWidth="500.0" pickOnBounds="true">
         <image>
            <Image url="@pexels-kelly-2869215.jpg" />
         </image>
      </ImageView>
      <TableView fx:id="guestTable" layoutX="10.0" layoutY="50.0" prefHeight="200.0" prefWidth="476.0">
        <columns>
          <TableColumn fx:id="firstName" prefWidth="75.0" text="First Name" />
          <TableColumn fx:id="lastName" prefWidth="75.0" text="Last Name" />
            <TableColumn fx:id="phone" prefWidth="103.0" text="Phone Number" />
            <TableColumn fx:id="email" prefWidth="102.0" text="email" />
            <TableColumn fx:id="address" prefWidth="120.0" text="address" />
        </columns>
      </TableView>
      <Button layoutX="284.0" layoutY="261.0" mnemonicParsing="false" onAction="#save" prefHeight="27.0" prefWidth="71.0" text="Save">
         <font>
            <Font name="Bodoni MT Bold" size="14.0" />
         </font>
      </Button>
      <Button layoutX="107.0" layoutY="261.0" mnemonicParsing="false" onAction="#exit" prefHeight="27.0" prefWidth="71.0" text="Exit">
         <font>
            <Font name="Bodoni MT Bold" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
